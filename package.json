{
  "name": "boiler-sync",
  "version": "0.0.1",
  "description": "Boilerplate generation and updates for TS/JS projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laurence79/boiler-sync.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "main": "./lib/index.js",
  "files": [
    "lib/"
  ],
  "bin": "./lib/cli.js",
  "scripts": {
    "start": "./node_modules/.bin/ts-node ./src/cli.ts update ../ts-json",
    "lint": "./node_modules/.bin/eslint --cache 'src/**/*.ts' --quiet",
    "lint:watch": "./node_modules/.bin/esw --cache 'src/**/*.ts' --watch",
    "build": "npm run clean && npm run build:cjs",
    "build:cjs": "./node_modules/.bin/ttsc -p tsconfig.release.json",
    "build:watch": "./node_modules/.bin/ttsc -p tsconfig.json --watch",
    "clean": "rimraf lib",
    "prepublishOnly": "npm run build",
    "test": "jest --passWithNoTests",
    "gen:validators": "typescript-json-schema src/types/ProjectConfig.ts ProjectConfig -o src/types/ProjectConfig.schema.json && typescript-json-schema src/types/TemplateConfig.ts TemplateConfig -o src/types/TemplateConfig.schema.json"
  },
  "dependencies": {
    "@laurence79/ts-json": "^1.0.0",
    "@laurence79/ts-results": "^1.0.0",
    "ajv": "^7.2.1",
    "deepmerge": "^4.2.2",
    "handlebars": "^4.7.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "simple-git": "^2.36.1",
    "sort-package-json": "^1.49.0",
    "ts-array-extensions": "^1.0.0",
    "uuid": "^8.3.2",
    "yaml": "^1.10.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/prettier": "^2.2.2",
    "@types/rimraf": "^3.0.0",
    "@types/ts-nameof": "^4.2.1",
    "@types/uuid": "^8.3.0",
    "@types/yaml": "^1.9.7",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-nameof": "^5.0.0",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.2",
    "typescript-json-schema": "^0.49.0"
  }
}
